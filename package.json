{
  "name": "postcss-at-rule-parser",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "run-p format:js format:md format:json",
    "format:js": "prettier --config ./package.json --write './**/*.{js,ts,mjs}'",
    "format:md": "prettier --parser markdown --write './**/*.md'",
    "format:json": "prettier --parser json --write './**/*.json'",
    "lint": "eslint . -c ./.eslintrc.yml './**/*.{ts,tsx,js}'",
    "lint:fix": "eslint . -c ./.eslintrc.yml './**/*.{ts,tsx,js}' --fix"
  },
  "repository": "postcss/postcss-at-rule-parser",
  "keywords": [
    "postcss",
    "css",
    "parser",
    "at-rule",
    "media queries"
  ],
  "author": "yisibl(一丝)",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.14.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "postcss": "^8.4.14"
  },
  "dependencies": {
    "css-tree": "^2.1.0"
  }
}
